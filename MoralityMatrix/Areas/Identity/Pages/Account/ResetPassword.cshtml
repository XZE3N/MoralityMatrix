@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Resetează parola";
}

<div class="col-md-4 container mb-2 pt-4">
    <img class="img-fluid" src="@Url.Content("~/images/png/logo-no-background.png")" />
</div>
<div class="row">
    <div class="container col-md-6">
        <hr />
        <h1 class="display-6">@ViewData["Title"]</h1>
        <h2 class="lead">Resetează-ți parola.</h2>

        <form method="post">
            <input asp-for="Input.Code" type="hidden" />

            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control mb-2" autocomplete="email" placeholder="Email" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control mb-2" autocomplete="new-password" placeholder="Parolă" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control mb-2" autocomplete="new-password" placeholder="Confirmare Parolă" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="w-100 btn btn-lg btn-phthalo-green">Resetează</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
