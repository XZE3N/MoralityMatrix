@page
@model RegisterModel
@{
    ViewData["Title"] = "Înregistrare";
}

<div class="row justify-content-center font-varela">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="container mb-4 pt-5">
                <img class="img-fluid" src="@Url.Content("~/images/png/logo-no-background.png")" />
            </div>
            <hr class="mb-4" />
            <h4>Înregistrează un utilizator nou</h4>

            <span asp-validation-for="Input.Username" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control pe-4 mb-2" autocomplete="username" placeholder="Utilizator" aria-required="true" />
                <label asp-for="Input.Username"></label>
                <i class="fas fa-user position-absolute top-50 end-0 translate-middle-y me-3"></i>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control pe-4 mb-2" autocomplete="username" placeholder="Email" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <i class="fas fa-envelope position-absolute top-50 end-0 translate-middle-y me-3"></i>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control pe-4 mb-2" autocomplete="new-password" placeholder="Parolă" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <i class="fas fa-lock position-absolute top-50 end-0 translate-middle-y me-3"></i>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control pe-4 mb-2" autocomplete="new-password" placeholder="Confirmă parola" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <i class="fas fa-lock position-absolute top-50 end-0 translate-middle-y me-3"></i>
            </div>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg text-white btn-phthalo-green">Înregistrare</button>
            <div>
                <div>
                    <p class="m-0 mt-2">
                        <a id="resend-confirmation" class="link-phthalo-green" asp-page="./ResendEmailConfirmation">Retrimite confirmarea prin email</a>
                    </p>
                    <p class="mb-2 mt-2">
                        <a class="ms-auto link-phthalo-green" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Autentificare</a>
                    </p>
                </div>
            </div>
        </form>
        <section>
            <div class="container d-flex justify-content-center align-items-center">
                <p class="text-muted mb-3">sau conectează-te cu</p>
            </div>
            <hr class="m-0 mb-3" />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div class="d-flex justify-content-center align-items-center">
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    if (@provider.DisplayName == "Google")
                                    {
                                        <button type="submit" class="btn text-white btn-phthalo-green btn-square-md text-center" name="provider" value="@provider.Name" title="Înregistrează-te folosind contul tău de @provider.DisplayName">
                                            <span class="me-2">Google</span>
                                            <i class="fab fa-google"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Înregistrează-te folosind contul tău de @provider.DisplayName">@provider.DisplayName</button>
                                    }
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $(".active").removeClass("active");
            $("#register").addClass("active");
        });
    </script>
}