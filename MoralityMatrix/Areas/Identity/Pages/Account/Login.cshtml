@page
@model LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<div class="row justify-content-center font-varela">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="container mb-4 pt-5">
                    <img class="img-fluid" src="@Url.Content("~/images/png/logo-no-background.png")" />
                </div>
                <hr class="mb-4" />
                <h4>Autentificare cu un cont existent</h4>
                
                <span asp-validation-for="Input.Username" class="text-danger"></span>
                <div class="form-floating">
                    <input asp-for="Input.Username" class="form-control pe-4 mb-2" autocomplete="username" placeholder="Utilizator" aria-required="true" />
                    <label asp-for="Input.Username" class="form-label"></label>
                    <i class="fas fa-user position-absolute top-50 end-0 translate-middle-y me-3"></i>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control pe-4 mb-2" autocomplete="current-password" placeholder="Parolă" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <i class="fas fa-lock position-absolute top-50 end-0 translate-middle-y me-3"></i>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="d-flex">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <p class="ms-auto">
                        <a id="forgot-password" class="link-phthalo-green" asp-page="./ForgotPassword">Ai uitat parola?</a>
                    </p>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg text-white btn-phthalo-green">Autentificare</button>
                </div>
                <div>
                    <p class="m-0 mt-2">
                        <a id="resend-confirmation" class="link-phthalo-green" asp-page="./ResendEmailConfirmation">Retrimite confirmarea prin email</a>
                    </p>
                    <p class="mb-2 mt-2">
                        <a class="link-phthalo-green" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Înregistrare</a>
                    </p>
                </div>
            </form>
        </section>
        
        <section>
            <div class="container d-flex justify-content-center align-items-center">
                <p class="text-muted mb-3">sau conectează-te cu</p>
            </div>
            <hr class="m-0 mb-3"/>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div class="d-flex justify-content-center align-items-center">
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    if (@provider.DisplayName == "Google")
                                    {
                                        <button type="submit" class="btn text-white btn-phthalo-green btn-square-md text-center" name="provider" value="@provider.Name" title="Autentifică-te folosind contul tău de @provider.DisplayName">
                                            <span class="me-2">Google</span>
                                            <i class="fab fa-google"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Autentifică-te folosind contul tău de @provider.DisplayName">@provider.DisplayName</button>
                                    }
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    <!--</div>-->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $(".active").removeClass("active");
            $("#login").addClass("active");
        });
    </script>
}
