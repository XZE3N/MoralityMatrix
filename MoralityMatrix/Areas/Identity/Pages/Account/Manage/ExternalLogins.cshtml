@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Gestionare autentificări externe";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />
@if (Model.CurrentLogins?.Count > 0)
{
    <h3>Autentificări externe înregistrate</h3>
    <table class="table">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr>
                    <td class="pt-3" id="@($"login-provider-{login.LoginProvider}")">@login.ProviderDisplayName</td>
                    <td>
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                                <div class="d-flex align-items-center">
                                    <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                    <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                    <button type="submit" class="btn btn-phthalo-green" title="Elimină autentificarea prin @login.ProviderDisplayName de pe contul tău">Elimină</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (Model.OtherLogins?.Count > 0)
{
    <h4>Adaugă metode externe de autentificare.</h4>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    if (@provider.DisplayName == "Google")
                    {
                        <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn text-white btn-phthalo-green btn-square-md text-center" name="provider" value="@provider.Name" title="Autentifică-te folosind contul tău de @provider.DisplayName">
                            <span class="me-2">Google</span>
                            <i class="fab fa-google"></i>
                        </button>
                    }
                    else
                    {
                        <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Autentifică-te folosind contul tău de @provider.DisplayName">@provider.DisplayName</button>
                    }
                }
            </p>
        </div>
    </form>
}
