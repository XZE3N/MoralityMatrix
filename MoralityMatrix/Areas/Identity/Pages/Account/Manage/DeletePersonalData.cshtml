@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Șterge datele personale";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-danger" role="alert">
    <p>
        <strong>Ștergerea acestor date va rezulta în eliminarea contului tău. Această acțiune este definitivă.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control mb-2" autocomplete="current-password" placeholder="Parolă" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Șterge datele personale și închide-mi contul</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
