@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Setează parola";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>Setează o parolă pentru contul tău</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-success">
    Nu ai adăugat o parolă pentru contul tău. Adaugă o parolă pentru a te putea autentifica fără servicii externe.
</p>
<div class="row">
    <div class="container">
        <form id="set-password-form" method="post">
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control mb-2" placeholder="Parolă nouă" autocomplete="new-password" />
                <label asp-for="Input.NewPassword" class="form-label"></label>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control mb-2" placeholder="Confirmă parola nouă" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="w-100 btn btn-lg btn-phthalo-green">Setează</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
