@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Înregistrare";
}

<div class="col-md-4 container mb-2 pt-4">
    <img class="img-fluid" src="@Url.Content("~/images/png/logo-no-background.png")" />
</div>
<div class="row">
    <div class="container col-md-6">
        <hr />
        <h1 class="display-6">@ViewData["Title"]</h1>
        <h2 class="lead" id="external-login-title">Asociază contul tău de @Model.ProviderDisplayName.</h2>

        <p id="external-login-description" class="text-success">
            Te-ai autentificat cu succes prin <strong>@Model.ProviderDisplayName</strong>.
            Te rugăm să introduci un email și un nume de utilizator pentru acest site în formularul
            de mai jos și să apeși butonul de înregistrare pentru a termina procesul de autentificare.
        </p>

        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <span asp-validation-for="Input.Username" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control mb-2" placeholder="Utilizator" autocomplete="username" />
                <label asp-for="Input.Username" class="form-label"></label>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control mb-2" placeholder="Email" autocomplete="email" />
                <label asp-for="Input.Email" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="w-100 btn btn-lg btn-phthalo-green">Înregistrare</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
