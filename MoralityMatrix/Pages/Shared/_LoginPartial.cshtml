@using Microsoft.AspNetCore.Identity
@using MoralityMatrix.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            @if(User.IsInRole("Admin")) {
                <a id="manage" class="nav-link font-baloo text-uppercase" asp-area="Identity" asp-page="/Account/Manage/Questions" title="Manage">@User.Identity?.Name</a>
            }
            else {
                <a id="manage" class="nav-link font-baloo text-uppercase" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
            }
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" id = "logout" class="nav-link btn btn-link text-uppercase font-baloo">Deconectare</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a id="register" class="nav-link text-uppercase font-baloo" asp-area="Identity" asp-page="/Account/Register">Înregistrare</a>
    </li>
    <li class="nav-item">
            <a id="login" class="nav-link text-uppercase font-baloo" asp-area="Identity" asp-page="/Account/Login">Autentificare</a>
    </li>
}
</ul>
