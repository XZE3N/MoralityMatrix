<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoralityMatrix</title>
    <!-- Handle this in production -->
    <script src="https://kit.fontawesome.com/f8efb70290.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoralityMatrix.styles.css" asp-append-version="true" />
</head>

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    string pageTitle = ViewData["Title"].ToString();
    string containerClass = (pageTitle == "Ghid") ? "container-custom" : "";
    string mainClass = (pageTitle == "Ghid") ? "" : "pb-3";
    string navbarClass = (pageTitle == "Ghid") ? "" : "mb-3";
    string container = (pageTitle == "Acasă") ? "" : "container";
}


<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-gradient @navbarClass shadow box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <div class="row align-items-center">
                        <div class="col-auto pe-0">
                            <img src="@Url.Content("~/images/png/favicon-white.png")" alt="" height="36" />
                        </div>
                        <div class="col p-1">
                            <h5 class="m-0" style="font-family: 'Baloo2'">MoralityMatrix</h5> 
                        </div>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="home" class="nav-link text-uppercase font-baloo" asp-area="" asp-page="/Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a id="guide" class="nav-link text-uppercase font-baloo" asp-area="" asp-page="/Guide">Ghid</a>
                        </li>
                        <li class="nav-item">
                            <a id="quiz" class="nav-link text-uppercase font-baloo" asp-area="" asp-page="/QuizStart">Quiz</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div id="main-wrapper" class="@container @containerClass">
        <main id="main" role="main" class="@mainClass">
            @RenderBody()
        </main>
    </div>

    <footer class="footer navbar-gradient shadow box-shadow">
        <div class="container d-flex flex-wrap justify-content-between align-items-center px-3">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="link-dark text-decoration-none">
                    <img class="bi me-1 mb-2" src="@Url.Content("~/images/png/favicon-white.png")" alt="" height="36" />
                </a>
                <span class="mb-md-0 text-white font-baloo">&copy; 2024 • MoralityMatrix •</span>
                <a asp-area="" asp-page="/Privacy" class="text-muted font-baloo ps-1">Confidențialitate</a>
            </div>

            <ul class="nav col-md-8 justify-content-end">
                <li class="nav-item"><a asp-area="" asp-page="/Index" class="nav-link px-2 text-muted text-uppercase font-baloo">Acasă</a></li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Manage/Feedback" class="nav-link px-2 text-muted text-uppercase font-baloo">Feedback</a></li>
                }
                else
                {
                    <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link px-2 text-muted text-uppercase font-baloo">Feedback</a></li>
                }
                <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link px-2 text-muted text-uppercase font-baloo">Autentificare</a></li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>